<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="10" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1">
    <TextField fx:id="nameField" alignment="CENTER" maxWidth="300" minWidth="300" promptText="Input Your Name Here">
        <font>
            <Font size="17.0"/>
        </font>
    </TextField>
    <TextField fx:id="ipField" alignment="CENTER" maxWidth="300" minWidth="300" promptText="Input the server's IP address">
        <font>
            <Font size="17.0"/>
        </font>
    </TextField>
    <TextField fx:id="portField" alignment="CENTER" maxWidth="300" minWidth="300" promptText="Input the server's port number">
        <font>
            <Font size="17.0"/>
        </font>
    </TextField>
    <Button fx:id="goButton" text="GO!">
        <font>
            <Font size="15.0"/>
        </font>
    </Button>
</VBox>
